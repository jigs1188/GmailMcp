{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "watchPatterns": ["/src/**"]
  },
  "deploy": {
    "startCommand": "node dist/railway-server.js",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "scaling": {
        "maxInstances": 1,
        "minInstances": 1
      }
    }
  }
}
